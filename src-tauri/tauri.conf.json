{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "system-info-monitor",
  "version": "0.1.0",
  "identifier": "com.sim.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "system-info-monitor",
        "width": 800,
        "height": 600,
        "visible": false,
        "transparent": true
      }
    ],
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.ico"
    },
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
